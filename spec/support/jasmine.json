{
  "spec_dir": "spec",
  "spec_files": [
    "../src/tests/**/*[sS]pec.ts"
  ],
  "helpers": [
    "../src/tests/helpers/**/*.ts"
  ],
  "reporters": [
    {
      "name": "jasmine-spec-reporter#SpecReporter",
      "options": {
        "displayStacktrace": "all"
      }
    }
  ],
  "stopSpecOnExpectationFailure": false,
  "random": false
}
